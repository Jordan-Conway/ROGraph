<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cd="using:ROGraph.UI.Dialogs.ConfirmDialog"
    x:Class="ROGraph.UI.Dialogs.ConfirmDialog.ConfirmDialogView"
    x:DataType="cd:ConfirmDialogViewModel">
    <StackPanel>
        <TextBlock Text="{Binding Message}" />
        <Grid ColumnDefinitions="*,*">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Click="Cancel">
                Cancel
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Click="Confirm">
                Confirm
            </Button>
        </Grid>
    </StackPanel>
</Window>
