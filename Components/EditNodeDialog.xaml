<UserControl x:Class="ROGraph.Components.EditNodeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ROGraph.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Name:" />
        <TextBox Grid.Column="1" Grid.Row="0" Name="NameInput" TextChanged="UpdateName" Text="{Binding Name}"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Description:" />
        <TextBox Grid.Column="1" Grid.Row="1" Name="DescriptionInput" TextChanged="UpdateDescription" Text="{Binding Description}"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Completed:" />
        <CheckBox Grid.Column="1" Grid.Row="2" Name="IsCompletedSelection" Checked="UpdateCompleted" Unchecked="UpdateNotCompleted" IsChecked="{Binding IsCompleted}"/>
        <Button Grid.Column="1" Grid.Row="3" Click="ApplyEdits">Apply</Button>
    </Grid>
</UserControl>
