<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:endv="using:ROGraph.NewUI.Dialogs.EditNodeDialog"
        x:Class="ROGraph.NewUI.Dialogs.EditNodeDialog.EditNodeDialogView"
        x:DataType="endv:EditNodeDialogViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Name" Grid.Row="0" Grid.Column="0"/>
        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Description" Grid.Row="1" Grid.Column="0"/>
        <TextBox Text="{Binding Description}" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="IsCompleted" Grid.Row="2" Grid.Column="0"/>
        <CheckBox IsChecked="{Binding IsCompleted}" Grid.Row="2" Grid.Column="1"/>

        <Button Click="Cancel" Grid.Row="3" Grid.Column="0">
            Cancel
        </Button>
        <Button Click="Confirm" Grid.Row="3" Grid.Column="1">
            Confirm
        </Button>

    </Grid>
</Window>