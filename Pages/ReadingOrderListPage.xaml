<Page x:Class="ROGraph.Pages.ReadingOrderListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ROGraph.Pages" xmlns:models="clr-namespace:ROGraph.Models"
      xmlns:components="clr-namespace:ROGraph.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadingOrderListPage">

    <Page.Resources>
        <DataTemplate x:Key="ReadingOrder" DataType="{x:Type models:ReadingOrder}">
            <Border Background="AliceBlue" BorderThickness="1">
                <Button Tag="{Binding PageNumber}" Click="NavigateToPage">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Description}" />
                    </StackPanel>
                </Button>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ReadingOrderList" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <components:ReadingOrderListPageToolbar Grid.Row="0"/>
    </Grid>
</Page>
