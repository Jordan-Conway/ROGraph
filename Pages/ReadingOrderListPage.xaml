<Page x:Class="ROGraph.Pages.ReadingOrderListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ROGraph.Pages" xmlns:models="clr-namespace:ROGraph.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadingOrderListPage">

    <Page.Resources>
        <DataTemplate x:Key="ReadingOrder" DataType="{x:Type models:ReadingOrderOverview}">
            <Border Background="AliceBlue" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Description}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ReadingOrderList">
    </Grid>
</Page>
