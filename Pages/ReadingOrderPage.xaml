<Page x:Class="ROGraph.Pages.ReadingOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ROGraph.Pages" xmlns:models="clr-namespace:ROGraph.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadingOrderPage">
    <Page.Resources>
        <DataTemplate x:Key="NodeDisplay" DataType="{x:Type models:Node}">
            <StackPanel>
                <Image Width="240" Height="240" MouseRightButtonDown="OpenNodeContextMenu">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="240" UriSource="E:\Projects\Tutorials\ROGraph\ROGraph\Images\StarNode.png" />
                    </Image.Source>
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Edit" Click="OpenEditNodeDialog" Tag="{Binding Id}" />
                            <MenuItem Header="Delete" Click="OpenDeleteNodeDialog" Tag="{Binding Id}" />
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    
    <Canvas x:Name="ReadingOrderCanvas">
        
    </Canvas>
</Page>
